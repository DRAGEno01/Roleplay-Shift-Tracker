<Window x:Class="RpShiftTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RpShiftTracker"
        mc:Ignorable="d"
        Title="Roleplay Shift Tracker" 
        Height="480" 
        Width="840"
        ResizeMode="NoResize"
        Background="#121212"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="BgColor" Color="#121212"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="MutedText" Color="#AAAAAA"/>
        <SolidColorBrush x:Key="Accent" Color="#64B5F6"/>
        <SolidColorBrush x:Key="Positive" Color="#4CAF50"/>
        <SolidColorBrush x:Key="Negative" Color="#EF5350"/>
        <SolidColorBrush x:Key="MenuBg" Color="#101010"/>
        <SolidColorBrush x:Key="CardBg" Color="#181818"/>
        <SolidColorBrush x:Key="ButtonBg" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#333333"/>
        <SolidColorBrush x:Key="ClockInBg" Color="#1E88E5"/>
        <SolidColorBrush x:Key="ClockInHover" Color="#1565C0"/>
        <SolidColorBrush x:Key="ClockOutBg" Color="#EF5350"/>
        <SolidColorBrush x:Key="ClockOutHover" Color="#C62828"/>
        <SolidColorBrush x:Key="Divider" Color="#252525"/>

        <!-- Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBg}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                    <Setter Property="Foreground" Value="{StaticResource Accent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Clock Button Style -->
        <Style x:Key="ClockButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ClockInBg}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ClockInHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Clock Out Button Style -->
        <Style x:Key="ClockOutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ClockOutBg}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ClockOutHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Content Area -->
        <Grid x:Name="MainContentGrid" Margin="0,0,0,0">
            <!-- Top Menu Button -->
            <Button x:Name="MenuButton" 
                    Content="☰" 
                    FontSize="12" 
                    FontWeight="Bold"
                    Width="40" 
                    Height="32"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Margin="10,8,0,0"
                    Background="{StaticResource ButtonBg}"
                    Foreground="{StaticResource PrimaryText}"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="MenuButton_Click"/>

            <!-- Content Control for View Switching -->
            <ContentControl x:Name="ContentArea" 
                          Margin="0,40,0,0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>
        </Grid>

        <!-- Overlay for closing menu when clicking outside -->
        <Border x:Name="MenuOverlay" 
                Background="Transparent"
                Visibility="Collapsed"
                Panel.ZIndex="1"
                IsHitTestVisible="False"/>

        <!-- Side Menu (initially hidden) - Must be after overlay to be on top -->
        <Border x:Name="SideMenu" 
                Background="{StaticResource MenuBg}"
                Width="260"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Margin="-260,0,0,0"
                Panel.ZIndex="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Menu Header -->
                <TextBlock Text="☰  Menu" 
                           FontFamily="Segoe UI" 
                           FontSize="23" 
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryText}"
                           Margin="16,12,16,4"
                           Grid.Row="0"/>

                <!-- Divider -->
                <Border Height="1" 
                        Background="{StaticResource Divider}" 
                        Margin="12,0,12,8"
                        Grid.Row="1"/>

                <!-- Menu Items -->
                <StackPanel Grid.Row="2" Margin="10,0,10,0">
                    <Button Content="🏠  Home" 
                            Style="{StaticResource MenuButtonStyle}"
                            Click="HomeButton_Click"/>
                    <Button Content="📋  View Shifts" 
                            Style="{StaticResource MenuButtonStyle}"
                            Margin="0,4,0,0"
                            Click="ViewShiftsButton_Click"/>
                    <Button Content="🖥  Overlay" 
                            Style="{StaticResource MenuButtonStyle}"
                            Margin="0,4,0,0"
                            Click="OverlayButton_Click"/>
                    <Button Content="🏢  Departments" 
                            Style="{StaticResource MenuButtonStyle}"
                            Margin="0,4,0,0"
                            Click="DepartmentsButton_Click"/>
                    <Button Content="⚙  Settings" 
                            Style="{StaticResource MenuButtonStyle}"
                            Margin="0,4,0,0"
                            Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
