<UserControl x:Class="RpShiftTracker.ViewShifts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="840"
             Background="#121212">

    <UserControl.Resources>
        <!-- Reuse color resources from MainWindow -->
        <SolidColorBrush x:Key="BgColor" Color="#121212"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="MutedText" Color="#AAAAAA"/>
        <SolidColorBrush x:Key="Accent" Color="#64B5F6"/>
        <SolidColorBrush x:Key="CardBg" Color="#181818"/>
        <SolidColorBrush x:Key="ButtonBg" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#333333"/>
        <SolidColorBrush x:Key="Divider" Color="#252525"/>
        <SolidColorBrush x:Key="ListBg" Color="#101010"/>
        <SolidColorBrush x:Key="GoButtonBg" Color="#1E88E5"/>
        <SolidColorBrush x:Key="GoButtonHover" Color="#1565C0"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBg}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                    <Setter Property="Foreground" Value="{StaticResource Accent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Go Button Style -->
        <Style x:Key="GoButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource GoButtonBg}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource GoButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Controls: Title and Navigation -->
        <Grid Grid.Row="0" Margin="16,16,16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock Text="Weekly Shifts" 
                       FontFamily="Segoe UI" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryText}"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>

            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal" 
                        Grid.Column="1"
                        HorizontalAlignment="Right">
                <Button x:Name="PrevWeekButton"
                        Content="◀ Prev"
                        Style="{StaticResource NavButtonStyle}"
                        Click="PrevWeekButton_Click"
                        Margin="2,0"/>
                <Button x:Name="ThisWeekButton"
                        Content="This Week"
                        Style="{StaticResource NavButtonStyle}"
                        Click="ThisWeekButton_Click"
                        Margin="2,0"/>
                <Button x:Name="NextWeekButton"
                        Content="Next ▶"
                        Style="{StaticResource NavButtonStyle}"
                        Click="NextWeekButton_Click"
                        Margin="2,0"/>
            </StackPanel>
        </Grid>

        <!-- Date Selector Row -->
        <Grid Grid.Row="1" Margin="16,4,16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Jump to week containing date (YYYY-MM-DD):" 
                       FontFamily="Segoe UI" 
                       FontSize="11"
                       Foreground="{StaticResource MutedText}"
                       VerticalAlignment="Center"
                       Grid.Column="0"
                       Margin="0,0,6,0"/>

            <TextBox x:Name="DateEntry"
                     Width="120"
                     Height="24"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="{StaticResource ButtonBg}"
                     Foreground="{StaticResource PrimaryText}"
                     BorderBrush="{StaticResource Divider}"
                     BorderThickness="1"
                     Padding="4,2"
                     Grid.Column="1"
                     Margin="6,0,4,0"
                     KeyDown="DateEntry_KeyDown"/>

            <Button x:Name="DateGoButton"
                    Content="Go"
                    Style="{StaticResource GoButtonStyle}"
                    Click="DateGoButton_Click"
                    Grid.Column="2"/>

            <!-- Filter Shifts Dropdown -->
            <Button x:Name="FilterButton"
                    Content="Filter Shifts ▼"
                    Style="{StaticResource NavButtonStyle}"
                    HorizontalAlignment="Right"
                    Grid.Column="4"
                    Click="FilterButton_Click"/>
        </Grid>

        <!-- Filter Dropdown Popup -->
        <Popup x:Name="FilterPopup"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=FilterButton}"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Slide">
            <Border Background="{StaticResource CardBg}"
                    BorderBrush="{StaticResource Divider}"
                    BorderThickness="1"
                    Padding="8,6"
                    MaxHeight="300"
                    MinWidth="600">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="FilterCheckBoxPanel"
                              Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style TargetType="CheckBox">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Divider}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Resources>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Popup>

        <!-- Week Summary Card -->
        <Border Grid.Row="2" 
                Background="{StaticResource CardBg}"
                BorderBrush="{StaticResource Divider}"
                BorderThickness="1"
                Margin="16,4,16,8"
                Padding="10,8">
            <StackPanel>
                <TextBlock x:Name="WeekLabel"
                           Text="Week: 2024-01-01 (Mon) - 2024-01-07 (Sun)"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           Foreground="{StaticResource MutedText}"
                           Margin="0,0,0,2"/>
                <TextBlock x:Name="TotalLabel"
                           Text="Total this week: 00:00:00"
                           FontFamily="Segoe UI"
                           FontSize="13"
                           FontWeight="Bold"
                           Foreground="{StaticResource Accent}"/>
            </StackPanel>
        </Border>

        <!-- Shifts Table Card -->
        <Border Grid.Row="3"
                Background="{StaticResource CardBg}"
                BorderBrush="{StaticResource Divider}"
                BorderThickness="1"
                Margin="16,4,16,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Headers -->
                <Grid Grid.Row="0" Margin="8,6,8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="DAY"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="{StaticResource MutedText}"
                               Grid.Column="0"/>

                    <TextBlock Text="START"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="{StaticResource MutedText}"
                               Grid.Column="1"/>

                    <TextBlock Text="END"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="{StaticResource MutedText}"
                               Grid.Column="2"/>

                    <TextBlock Text="DURATION"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="{StaticResource MutedText}"
                               Grid.Column="3"
                               Margin="4,0,0,0"/>
                </Grid>

                <!-- Divider -->
                <Border Grid.Row="1"
                        Background="{StaticResource Divider}"
                        Margin="8,0,8,2"/>

                <!-- Shifts List -->
                <ListBox x:Name="ShiftsListBox"
                         Grid.Row="2"
                         Background="{StaticResource ListBg}"
                         Foreground="{StaticResource PrimaryText}"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         Margin="4,0,4,6"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="4,2"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#333333"/>
                                    <Setter Property="Foreground" Value="{StaticResource Accent}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1E1E1E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.Resources>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>

