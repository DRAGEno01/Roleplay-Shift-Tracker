<UserControl x:Class="RpShiftTracker.OverlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="840"
             Background="#121212">

    <UserControl.Resources>
        <!-- Color resources -->
        <SolidColorBrush x:Key="BgColor" Color="#121212"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="MutedText" Color="#AAAAAA"/>
        <SolidColorBrush x:Key="Accent" Color="#64B5F6"/>
        <SolidColorBrush x:Key="CardBg" Color="#181818"/>
        <SolidColorBrush x:Key="ButtonBg" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#333333"/>
        <SolidColorBrush x:Key="Divider" Color="#252525"/>

        <!-- Position Button Style -->
        <Style x:Key="PositionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBg}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource Divider}"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                    <Setter Property="Foreground" Value="{StaticResource Accent}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#0F0F0F"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Selected Position Button Style -->
        <Style x:Key="SelectedPositionButtonStyle" TargetType="Button" BasedOn="{StaticResource PositionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#42A5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer x:Name="MainScrollViewer"
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="32,32"
                  Focusable="True"
                  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Overlay" 
                       FontFamily="Segoe UI" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryText}"
                       Margin="0,0,0,4"/>

            <TextBlock Text="Configure the on-screen overlay display for tracking your shifts." 
                       FontFamily="Segoe UI" 
                       FontSize="11"
                       Foreground="{StaticResource MutedText}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>

            <!-- Enable/Disable Overlay Card -->
            <Border Background="{StaticResource CardBg}"
                    BorderBrush="{StaticResource Divider}"
                    BorderThickness="1"
                    Margin="0,0,0,16"
                    Padding="12,10">
                <StackPanel>
                    <TextBlock Text="🖥  Enable Overlay" 
                               FontFamily="Segoe UI" 
                               FontSize="13" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryText}"
                               Margin="0,0,0,2"/>

                    <TextBlock Text="Show an always-on-top overlay window displaying your shift information." 
                               FontFamily="Segoe UI" 
                               FontSize="11"
                               Foreground="{StaticResource MutedText}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <CheckBox x:Name="EnableOverlayCheckBox"
                              Content="Enable overlay"
                              FontFamily="Segoe UI"
                              FontSize="12"
                              Foreground="{StaticResource PrimaryText}"
                              Checked="EnableOverlayCheckBox_Checked"
                              Unchecked="EnableOverlayCheckBox_Unchecked"/>
                </StackPanel>
            </Border>

            <!-- Display Options Card -->
            <Border Background="{StaticResource CardBg}"
                    BorderBrush="{StaticResource Divider}"
                    BorderThickness="1"
                    Margin="0,0,0,16"
                    Padding="12,10">
                <StackPanel>
                    <TextBlock Text="📊  Display Options" 
                               FontFamily="Segoe UI" 
                               FontSize="13" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryText}"
                               Margin="0,0,0,2"/>

                    <TextBlock Text="Select what information to display in the overlay." 
                               FontFamily="Segoe UI" 
                               FontSize="11"
                               Foreground="{StaticResource MutedText}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                    <CheckBox x:Name="ShowStatusCheckBox"
                              Content="Show clock status (CLOCKED IN/OUT)"
                              FontFamily="Segoe UI"
                              FontSize="11"
                              Foreground="{StaticResource PrimaryText}"
                              Margin="0,2,0,0"
                              Checked="DisplayOption_Changed"
                              Unchecked="DisplayOption_Changed"/>

                    <CheckBox x:Name="ShowHoursCheckBox"
                              Content="Show weekly hours"
                              FontFamily="Segoe UI"
                              FontSize="11"
                              Foreground="{StaticResource PrimaryText}"
                              Margin="0,2,0,0"
                              Checked="DisplayOption_Changed"
                              Unchecked="DisplayOption_Changed"/>

                    <CheckBox x:Name="ShowWeekCheckBox"
                              Content="Show current week range"
                              FontFamily="Segoe UI"
                              FontSize="11"
                              Foreground="{StaticResource PrimaryText}"
                              Margin="0,2,0,0"
                              Checked="DisplayOption_Changed"
                              Unchecked="DisplayOption_Changed"/>

                    <CheckBox x:Name="ShowDepartmentCheckBox"
                              Content="Show current department"
                              FontFamily="Segoe UI"
                              FontSize="11"
                              Foreground="{StaticResource PrimaryText}"
                              Margin="0,2,0,12"
                              Checked="DisplayOption_Changed"
                              Unchecked="DisplayOption_Changed"/>
                </StackPanel>
            </Border>

            <!-- Position Selector Card -->
            <Border Background="{StaticResource CardBg}"
                    BorderBrush="{StaticResource Divider}"
                    BorderThickness="1"
                    Margin="0,0,0,16"
                    Padding="12,10">
                <StackPanel>
                    <TextBlock Text="📍  Position" 
                               FontFamily="Segoe UI" 
                               FontSize="13" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryText}"
                               Margin="0,0,0,2"/>

                    <TextBlock Text="Select where the overlay should appear on your screen." 
                               FontFamily="Segoe UI" 
                               FontSize="11"
                               Foreground="{StaticResource MutedText}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                    <!-- 3x3 Grid of Position Buttons -->
                    <Grid Margin="0,0,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Top Row -->
                        <Button x:Name="TopLeftButton" Content="↖" Grid.Row="0" Grid.Column="0" 
                                Style="{StaticResource PositionButtonStyle}" Margin="4"
                                Click="PositionButton_Click" Tag="top-left"/>
                        <Button x:Name="TopCenterButton" Content="↑" Grid.Row="0" Grid.Column="1" 
                                Style="{StaticResource PositionButtonStyle}" Margin="4"
                                Click="PositionButton_Click" Tag="top-center"/>
                        <Button x:Name="TopRightButton" Content="↗" Grid.Row="0" Grid.Column="2" 
                                Style="{StaticResource PositionButtonStyle}" Margin="4"
                                Click="PositionButton_Click" Tag="top-right"/>

                        <!-- Middle Row -->
                        <Button x:Name="MiddleLeftButton" Content="←" Grid.Row="1" Grid.Column="0" 
                                Style="{StaticResource PositionButtonStyle}" Margin="4"
                                Click="PositionButton_Click" Tag="middle-left"/>
                        <!-- Empty middle cell -->
                        <Border Grid.Row="1" Grid.Column="1" Width="60" Height="40" Margin="4"/>
                        <Button x:Name="MiddleRightButton" Content="→" Grid.Row="1" Grid.Column="2" 
                                Style="{StaticResource PositionButtonStyle}" Margin="4"
                                Click="PositionButton_Click" Tag="middle-right"/>

                        <!-- Bottom Row -->
                        <Button x:Name="BottomLeftButton" Content="↙" Grid.Row="2" Grid.Column="0" 
                                Style="{StaticResource PositionButtonStyle}" Margin="4"
                                Click="PositionButton_Click" Tag="bottom-left"/>
                        <Button x:Name="BottomCenterButton" Content="↓" Grid.Row="2" Grid.Column="1" 
                                Style="{StaticResource PositionButtonStyle}" Margin="4"
                                Click="PositionButton_Click" Tag="bottom-center"/>
                        <Button x:Name="BottomRightButton" Content="↘" Grid.Row="2" Grid.Column="2" 
                                Style="{StaticResource PositionButtonStyle}" Margin="4"
                                Click="PositionButton_Click" Tag="bottom-right"/>
                    </Grid>

                    <!-- Advanced Positioning -->
                    <Border Background="{StaticResource Divider}" Height="1" Margin="0,4,0,8"/>

                    <CheckBox x:Name="UseCustomPositionCheckBox"
                              Content="Use custom position"
                              FontFamily="Segoe UI"
                              FontSize="11"
                              FontWeight="Bold"
                              Foreground="{StaticResource PrimaryText}"
                              Margin="0,0,0,6"
                              Checked="UseCustomPositionCheckBox_Checked"
                              Unchecked="UseCustomPositionCheckBox_Unchecked"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="X:" 
                                   FontFamily="Segoe UI" 
                                   FontSize="11"
                                   Foreground="{StaticResource MutedText}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <TextBox x:Name="CustomXTextBox"
                                 Width="80"
                                 Height="24"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 Background="{StaticResource ButtonBg}"
                                 Foreground="{StaticResource PrimaryText}"
                                 BorderBrush="{StaticResource Divider}"
                                 BorderThickness="1"
                                 Padding="4,2"
                                 Margin="0,0,12,0"
                                 TextChanged="CustomPosition_TextChanged"/>

                        <TextBlock Text="Y:" 
                                   FontFamily="Segoe UI" 
                                   FontSize="11"
                                   Foreground="{StaticResource MutedText}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <TextBox x:Name="CustomYTextBox"
                                 Width="80"
                                 Height="24"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 Background="{StaticResource ButtonBg}"
                                 Foreground="{StaticResource PrimaryText}"
                                 BorderBrush="{StaticResource Divider}"
                                 BorderThickness="1"
                                 Padding="4,2"
                                 TextChanged="CustomPosition_TextChanged"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Transparency Card -->
            <Border Background="{StaticResource CardBg}"
                    BorderBrush="{StaticResource Divider}"
                    BorderThickness="1"
                    Padding="12,10">
                <StackPanel>
                    <TextBlock Text="🔍  Transparency" 
                               FontFamily="Segoe UI" 
                               FontSize="13" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryText}"
                               Margin="0,0,0,2"/>

                    <TextBlock Text="Adjust the transparency of overlay content. You can also make the background transparent." 
                               FontFamily="Segoe UI" 
                               FontSize="11"
                               Foreground="{StaticResource MutedText}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                    <CheckBox x:Name="TransparentBackgroundCheckBox"
                              Content="Make background transparent (content transparency still applies)"
                              FontFamily="Segoe UI"
                              FontSize="11"
                              Foreground="{StaticResource PrimaryText}"
                              Margin="0,0,0,8"
                              Checked="TransparentBackgroundCheckBox_Changed"
                              Unchecked="TransparentBackgroundCheckBox_Changed"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Content transparency:" 
                                   FontFamily="Segoe UI" 
                                   FontSize="11"
                                   Foreground="{StaticResource MutedText}"
                                   VerticalAlignment="Center"
                                   Grid.Column="0"
                                   Margin="0,0,8,0"/>

                        <Slider x:Name="TransparencySlider"
                                Grid.Column="1"
                                Minimum="0"
                                Maximum="100"
                                Value="20"
                                Margin="0,0,8,0"
                                ValueChanged="TransparencySlider_ValueChanged"/>

                        <TextBlock x:Name="TransparencyValueLabel"
                                   Text="20%"
                                   FontFamily="Segoe UI" 
                                   FontSize="12" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource Accent}"
                                   VerticalAlignment="Center"
                                   Grid.Column="2"
                                   Width="50"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

